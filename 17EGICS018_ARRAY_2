#include<stdio.h>
#include<math.h>
void main()
{
	int n,m,s1=0,s2=0,i,j,a[50];
	printf("Enter a size of an array: ");
	scanf("%d",&n);
	
	if(n%2==0){
		printf("Enter array elements: \n");
		for(i=0;i<n;i++)
		{
			scanf("%d",&a[i]);
		}
		m=n/2;
		for(i=0;i<m;i++)
		{
			s1=s1+a[i];
		}
		for(j=m;j<n;j++)
		{
			s2=s2+a[j];
		}
		if(s1>s2){
			printf("%d",s2);
		}
		else{
			printf("%d",s1);
		}
	}
	else{
		printf("Please enter a even number og array size");
	}
}
